{
  "name": "vsc-1c-local-check",
  "displayName": "VSC 1C Local check",
  "description": "",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:bsl",
    "onFileSystem:*",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "bsl",
        "aliases": [
          "BSL"
        ],
        "extensions": [
          ".bsl"
        ]
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "test": "mocha \"test/**/*.test.js\""
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "chai": "^4.3.10",
    "eslint": "^9.32.0",
    "mocha": "^10.7.3"
  },
  "dependencies": {
    "sax": "^1.4.1"
  },
  "publisher": "ArtemYakovlev",
  "author": {
    "name": "Artem Yakovlev",
    "url": "https://github.com/artemyakovlev94"
  },
  "homepage": "https://github.com/artemyakovlev94/vsc-1c-local-check",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/artemyakovlev94/vsc-1c-local-check.git"
  }
}
